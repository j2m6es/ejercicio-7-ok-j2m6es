{% extends 'base.html.twig' %}

{% block title %}Notas{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .resaltar {color:green;font-weight: bold;text-decoration: underline;}
</style>

<div class="example-wrapper">
    Notas de {{ ALUMNO }}
    <hr>
    <table>
        <tr><td>Asignatura</td><td>Nota</td></tr>
    {% for na in NOTAS_ASIGNATURA %}
        <tr><td>{{ na.nombreAsignatura }}</td><td {% if na.notaAsignatura>=5 %}class="resaltar"{% endif %}>{{ na.notaAsignatura }}</td></tr>
    {% endfor %}
    </table>
    <hr>
    Nota Media: {{ MEDIA_NOTA }}
    <hr>
    <a href="/">Volver</a>
</div>
{% endblock %}
