{% extends 'base.html.twig' %}

{% block title %}Asignaturas{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Asignaturas de {{ ALUMNO }}
    <br>
    <ul>
    {% for asig in ASIGNATURAS %}
        <li>{{ asig.nombre }}&nbsp;<a href="/asignaturas/desmatricularse/{{ ID_ALUMNO }}/{{ asig.id }}">(Desmatricurlarse)</a></li>
    {% endfor %}
    </ul>
    <hr>
    
    Todas las asignaturas
    <br>
    <ul>
    {% for asig in TODAS_ASIGNATURAS %}
        {% set matriculado = false %}
        {% for asigMatriculado in ASIGNATURAS %}
            {% if asig.id == asigMatriculado.id %}
                {% set matriculado = true %}
            {% endif %}
        {% endfor %}
        {% if not matriculado %}
        <li>{{ asig.nombre }}&nbsp;<a href="/asignaturas/matricularse/{{ ID_ALUMNO }}/{{ asig.id }}">(Matricularse)</a></li>
        {% endif %}
    {% endfor %}
    </ul>
    <a href="/">Volver</a>
</div>
{% endblock %}