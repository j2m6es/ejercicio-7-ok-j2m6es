{% extends 'base.html.twig' %}

{% block title %}Listado de Alumnos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Listado de Alumnos:
    <table style="text-align: center;" border="1">
    <tr><td>Num.Expediente</td><td>Nombre</td><td>Notas</td><td>Asignaturas</td></tr>
    {% for al in ALUMNOS %}
        <tr>
            <td>{{ al.nExpediente }}</td>
            <td>{{ al.nombre }} {{ al.apellidos }}</td>
            <td><a href="/notas/obtener/{{ al.id }}">Ver</a></td>
            <td><a href="/asignaturas/obtener/{{ al.id }}">Ver</a></td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}